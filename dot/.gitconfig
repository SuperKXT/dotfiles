# global setting
[alias]
	graph = log --all --graph --decorate --oneline
	assume-unchanged = update-index --assume-unchanged
	no-assume-unchanged = update-index --no-assume-unchanged
[branch]
	autoSetupMerge = always
[core]
	editor = code -w
	excludesFile = ~/.gitignore
[commit]
	template = ~/.gitmessage
	gpgSign = true
[user]
	email = superkxt@outlook.com
	name = SuperKXT
	signingKey = /home/superkxt/.ssh/id_github.pub
[pull]
	rebase = false
[push]
	autoSetupRemote = true
[init]
	defaultBranch = main
[url "git@github.com:"]
	insteadOf = https://github.com/
[gpg]
	format = ssh
