[plugins]
active-plugins=['filebrowser', 'time', 'sort', 'docinfo', 'modelines', 'spell', 'quickhighlight', 'shellcheck']

[preferences/editor]
background-pattern='none'
display-line-numbers=true
display-overview-map=false
display-right-margin=false
editor-font='Noto Naskh Arabic 12'
scheme='pop-light'
tabs-size=uint32 4
use-default-font=false
wrap-last-split-mode='word'

[preferences/ui]
bottom-panel-visible=false
show-tabs-mode='auto'
statusbar-visible=true
